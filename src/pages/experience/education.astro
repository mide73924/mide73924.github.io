---
import Layout from "../../layouts/Layout.astro";
---

<Layout
  title="Education - Michel Deosaran"
  description="My academic background and educational achievements."
>
  <div
    class="py-16 px-4 sm:px-6 lg:px-8"
  >
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div
        class="text-center mb-12 animate-fade-in"
      >
        <h1
          class="text-4xl font-bold text-primary mb-4"
        >
          Education
        </h1>
        <p
          class="text-secondary text-lg"
